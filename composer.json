{
  "name": "optimoapps/statamic-rich-snippet",
  "description": "Schema Json-ld Rich Snippet",
  "keywords": [
    "statamic",
    "rich snippet",
    "json-ld"
  ],
  "autoload": {
    "files": [
      "src/Helper.php"
    ],
    "psr-4": {
      "OptimoApps\\RichSnippet\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OptimoApps\\RichSnippet\\Tests\\": "tests"
    }
  },
  "homepage": "https://optimoapps.com",
  "license": "proprietary",
  "type": "statamic-addon",
  "authors": [
    {
      "name": "sathish.thi@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "spatie/schema-org": "^2.14",
    "statamic/cms": "^3.0.14|^4.0"
  },
  "require-dev": {
    "orchestra/testbench": "4.*|5.*",
    "phpunit/phpunit": "^8.4|^9.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  },
  "support": {
    "email": "info@optimoapps.com"
  },
  "extra": {
    "statamic": {
      "name": "Statamic Rich Snippet(Schema.org JSON-LD)",
      "description": "Rich Snippet Addon for generating Schema.org JSON-LD. Currently, supported type BlogPost, News Article, Article, Organization and Webpage."
    },
    "laravel": {
      "providers": [
        "OptimoApps\\RichSnippet\\ServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
